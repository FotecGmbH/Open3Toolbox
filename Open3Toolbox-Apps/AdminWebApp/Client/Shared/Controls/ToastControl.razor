@using Biss.Apps.Blazor.Components
@if (Item.ShowToast)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
        <div class="toast showing" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                @*<img src="..." class="rounded me-2" alt="...">*@
                <strong class="me-auto">@Item.ToastConfirmationTitle</strong>
                <small></small>
            </div>
            <div class="toast-body">
                @Item.ToastConfirmationMessage
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public ToastComp Item { get; set; }
}
